<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/delete"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:background="@color/red"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Delete"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Client Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/cName"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Client Mobile"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/cMobile"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Client Email"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/cEmail"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Architect Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/aName"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Architect Mobile"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/aMobile"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Client Address"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/cAddress"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Client Status"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/cStatus"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Product Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/product"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/date"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Reference Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:id="@+id/reference"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"></View>

    </LinearLayout>